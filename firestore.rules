
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ========= HELPERS ========= */
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn()
        && getUserData().role == 'admin';
    }

    /* ========= USERS ========= */
    match /users/{userId} {
      // Admin dapat melihat daftar semua pengguna
      allow list: if isAdmin();

      // Pengguna dapat membaca profilnya sendiri, admin dapat membaca profil siapa pun
      allow read: if isSignedIn()
        && (isOwner(userId) || isAdmin());

      // Pengguna baru dapat membuat profilnya sendiri
      allow create: if isSignedIn() && isOwner(userId);

      // Pengguna dapat memperbarui profilnya sendiri, selama mereka tidak mengubah 'role'
      allow update: if isSignedIn()
        && isOwner(userId)
        && !('role' in request.resource.data);
      
      // Admin dapat memperbarui & menghapus profil siapa pun (termasuk mengubah 'role')
      allow update, delete: if isAdmin();
    }

    /* ========= CAVES ========= */
    match /caves/{caveId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    /* ========= SPOTS ========= */
    match /spots/{spotId} {
        // Izinkan siapa saja membaca daftar spot atau spot individu
        allow read, list: if true;
        // Hanya Admin yang bisa membuat, mengubah, dan menghapus spot
        allow create, update, delete: if isAdmin();
    }

    /* ========= KIOSK ========= */
    match /kioskSettings/{id} {
      // Siapa saja bisa membaca pengaturan kios (mis. untuk logo di halaman login)
      allow read: if true;
      // Hanya admin yang bisa mengubahnya
      allow create, update, delete: if isAdmin();
    }

    /* ========= KIOSK STATS & EVENTS ========= */
    match /kioskStatsDaily/{date} {
      // Admin bisa mengelola statistik harian
      allow read, create, update, delete: if isAdmin();
    }

    match /kioskEvents/{eventId} {
      // Siapa pun yang login (termasuk kios) dapat membuat event log
      allow create: if isSignedIn();
      // Hanya admin yang dapat membaca, mengubah, atau menghapus event individual
      allow read, update, delete: if isAdmin();
    }
    
    /* ========= KIOSK REMOTE CONTROL ========= */
    match /kioskDevices/{kioskId} {
        // Kios dapat menulis statusnya sendiri (heartbeat)
        allow write: if isSignedIn();
        // Admin dapat membaca status semua kios
        allow read: if isAdmin();
    }

    match /kioskControl/{controlId} {
        // Kios dapat membaca dokumen kontrol
        allow read: if isSignedIn();
        // Hanya admin yang dapat menulis/mengubah perintah kontrol
        allow write: if isAdmin();
    }
  }
}
