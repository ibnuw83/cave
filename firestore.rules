
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().role == 'admin';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read any user profile
      allow read: if isAdmin();
      // Signed-in users can read/write their own profile
      allow write: if isOwner(userId) || isAdmin();
    }

    // Rules for the 'caves' collection
    match /caves/{caveId} {
      // Any signed-in user can read caves
      allow read: if isSignedIn();
      // Only admins can create, update, or delete caves
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'spots' collection
    match /spots/{spotId} {
        // Any signed-in user can read spots
        allow read: if isSignedIn();
        // Only admins can create, update, or delete spots
        allow create, update, delete: if isAdmin();
    }

     // Rules for the 'kioskSettings' collection
    match /kioskSettings/{settingId} {
        // Anyone can read kiosk settings for the public /kios page
        allow read: if true;
        // Only admins can change kiosk settings
        allow write: if isAdmin();
    }
  }
}
