
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ========= HELPERS ========= */
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn()
        && getUserData().role == 'admin';
    }

    /* ========= USERS ========= */
    match /users/{userId} {
      // Admin dapat melihat daftar semua pengguna
      allow list: if isAdmin();

      // Pengguna dapat membaca profilnya sendiri, admin dapat membaca profil siapa pun
      allow read: if isSignedIn()
        && (isOwner(userId) || isAdmin());

      // Pengguna baru dapat membuat profilnya sendiri (hanya sekali)
      allow create: if isSignedIn()
        && isOwner(userId)
        && !exists(/databases/$(database)/documents/users/$(userId));

      // Pengguna dapat memperbarui profilnya sendiri, selama mereka tidak mengubah 'role'
      allow update: if isSignedIn()
        && isOwner(userId)
        && !('role' in request.resource.data);
      
      // Admin dapat memperbarui & menghapus profil siapa pun (termasuk mengubah 'role')
      allow update, delete: if isAdmin();
    }

    /* ========= CAVES ========= */
    match /caves/{caveId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    /* ========= SPOTS ========= */
    match /spots/{spotId} {
        // Hanya pengguna yang login yang bisa membaca spot individu
        allow read: if isSignedIn();
        // Admin bisa membaca seluruh daftar spot
        allow list: if isAdmin();
        // Admin bisa membuat, mengubah, dan menghapus spot
        allow create, update, delete: if isAdmin();
    }

    /* ========= KIOSK ========= */
    match /kioskSettings/{id} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
  }
}
