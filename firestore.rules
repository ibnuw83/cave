
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // --- Publicly Readable Collections ---
    match /locations/{locationId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /spots/{spotId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /pricingTiers/{tierId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // --- User Profiles ---
    match /users/{userId} {
      // Anyone can read a user's public profile data (name, photo)
      allow get: if true;
      
      // Only admins can list all users
      allow list: if isAdmin();

      // Anyone authenticated can create their own profile document. Admins can create any.
      allow create: if request.auth != null;

      // Users can update their own document. Admins can update any.
      allow update: if isOwner(userId) || isAdmin();
      
      // Only admins can delete user documents.
      allow delete: if isAdmin();
    }

    // --- Kiosk-related Collections ---
    match /kioskSettings/{settingId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /kioskDevices/{deviceId} {
      // Allow any device to write its heartbeat.
      allow read, write: if true;
    }

    match /kioskControl/{controlId} {
      allow read: if true; // Kiosks can read control commands
      allow write: if isAdmin(); // Admins can write commands
    }

    match /kioskEvents/{eventId} {
      // Anyone (especially kiosks) can create events. Events are write-only.
      allow create: if true;
      allow read, update, delete: if false;
    }

    match /kioskStats/{locationId} {
      allow read: if true;
      // Allow any client to write stats (throttled on the client-side).
      allow write: if true; 
    }
  }
}
